<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view for TabellaFatture -->
    <record id="view_tabella_fatture_tree" model="ir.ui.view">
        <field name="name">tabella.fatture.tree</field>
        <field name="model">tabella.fatture</field>
        <field name="arch" type="xml">
            <tree string="Fatture">
                <field name="cliente_id"/>
                <field name="data_fattura"/>
                <field name="numero"/>
                <field name="addetto_vendite"/>
                <field name="data_scadenza"/>
                <field name="documento_origine"/>
                <field name="insoluta"/>
                <field name="imponibile"/>
                <field name="imposta"/>
                <field name="totale"/>
                <field name="importo_dovuto"/>
                <field name="stato_efattura"/>
                <field name="stato"/>
            </tree>
        </field>
    </record>

    <!-- Form view for TabellaFatture -->
    <record id="view_tabella_fatture_form" model="ir.ui.view">
        <field name="name">tabella.fatture.form</field>
        <field name="model">tabella.fatture</field>
        <field name="arch" type="xml">
            <form string="Fatture">
                <sheet>
                    <group>
                        <field name="cliente_id"/>
                        <field name="data_fattura"/>
                        <field name="numero"/>
                        <field name="addetto_vendite"/>
                        <field name="data_scadenza"/>
                        <field name="documento_origine"/>
                        <field name="insoluta"/>
                        <field name="imponibile"/>
                        <field name="imposta"/>
                        <field name="totale"/>
                        <field name="importo_dovuto"/>
                        <field name="stato_efattura"/>
                        <field name="stato"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to open the views -->
    <record id="action_tabella_fatture" model="ir.actions.act_window">
        <field name="name">Fatture</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tabella.fatture</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_tabella_fatture_tree"/>
    </record>

    <!-- Menu item to access the views -->
    <menuitem id="menu_tabella_fatture" name="Fatture" action="action_tabella_fatture" parent="base.menu_custom" 
sequence="5"/>

    <!-- Wizard form view -->
    <record id="view_tabella_fatture_import_wizard_form" model="ir.ui.view">
        <field name="name">tabella.fatture.import.wizard.form</field>
        <field name="model">tabella.fatture.import.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="path"/>
                    <field name="filename" invisible="1"/>
                </group>
                <footer>
                    <button string="Import" type="object" class="btn-primary" name="button_import"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Azione d'importo del file .csv -->
    <record id="action_tabella_fatture_import_wizard" model="ir.actions.act_window">
        <field name="name">Importa Fatture</field>
        <field name="res_model">tabella.fatture.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_tabella_fatture_import_wizard_form"/>
        <field name="target">new</field>
    </record>

    <!-- Importazione file .csv -->
    <menuitem id="menu_action_tabella_fatture_import" name="Importa Fatture" action="action_tabella_fatture_import_wizard" parent="menu_tabella_fatture" sequence="10"/>
<!-- seconda parte legata alla creazione del menu nella dashboard di Odoo -->
    <!-- Main Menu for Fatturazione -->
    <menuitem id="main_fatturazione_menu" name="Fatturazione" sequence="10" web_icon="fatturazione,static/description/icon.png"/>

    <!-- Action to open the Fatture views -->
    <record id="action_fatturazione" model="ir.actions.act_window">
        <field name="name">Fatture</field>
        <field name="res_model">tabella.fatture</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                Non sono state create ancora fatture.
            </p>
        </field>
    </record>


    <!-- Menu items -->
    <menuitem id="menu_fatturazione_fatture" name="Fatture" parent="main_fatturazione_menu" action="action_fatturazione" sequence="10"/>
    
</odoo>


