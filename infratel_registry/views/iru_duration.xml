<odoo>
<!--  vista lista-->
    <record id="ir_duration_tree" model="ir.ui.view">
        <field name="name">Durata IRU</field>
        <field name="model">iru.duration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- vista form  -->
    <record id="iru_duration_view" model="ir.ui.view">
    <field name="name">Durata IRU</field>
    <field name="model">iru.duration</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>